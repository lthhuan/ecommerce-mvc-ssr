extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug

block main
  +alert-success(5000)
  +alert-error(5000)

  .container-fluid
    // ===== PAGE HEADER =====
    .container-fluid
        .d-flex.justify-content-between.align-items-center.mb-3
            h1.mb-0 Danh sách nhóm quyền
            a.btn.btn-success(
            href=`${prefixAdmin}/role/create`
            ) + Thêm mới sản phẩm

    // List
    .card
      .card-header
        strong Danh sách

      .card-body.p-0
        table.table.table-hover.table-bordered.table-sm.mb-0(
          checkbox-multi
        )
          thead.table-light
            tr.text-center

              th(style="width:60px") STT
              th(style="width:120px") Nhóm quyền
              th(style="width:120px") Mô tả ngắn
              th(style="width:180px") Hành động

          tbody
            each item, index in records
              tr.align-middle
                td.text-center #{index + 1}
                td.text-center #{item.title}

                td.text-center!= item.description
                td.text-center
                  a.btn.btn-secondary.btn-sm.me-1(
                    href=`${prefixAdmin}/products/detail/${item.id}`
                  ) Chi tiết

                  a.btn.btn-warning.btn-sm.me-1(
                    href=`${prefixAdmin}/products/edit/${item.id}`
                  ) Sửa

                  button.btn.btn-danger.btn-sm.ml-1(
                    button-delete
                    data-id=item.id
                  ) Xóa


