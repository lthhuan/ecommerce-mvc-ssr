extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    +alert-error(5000)
    .container-fluid
        // ===== HEADER =====
        .d-flex.justify-content-between.align-items-center.mb-3
            h1.mb-0 Chi tiết tài khoản

            a.btn.btn-secondary(
                href=`${prefixAdmin}/account`
            ) Quay lại

        // ===== CARD =====
        .card
            .card-header
                strong Thông tin tài khoản
            .card-body
                .row
                    // ===== AVATAR =====
                    .col-md-3.text-center
                        if data.avatar
                            img(
                                class="image-preview"
                                src=data.avatar
                                upload-image-preview
                            )

                        else
                            img(
                                src="/admin/images/no-avatar.png"
                                alt="No avatar"
                                class="img-thumbnail mb-3"
                                style="max-width: 150px"
                            )

                    // ===== INFO =====
                    .col-md-9
                        table.table.table-borderless
                            tr
                                th(style="width: 200px") Họ và tên
                                td #{data.fullName}

                            tr
                                th Email
                                td #{data.email}

                            tr
                                th Số điện thoại
                                td #{data.phone || "—"}

                            tr
                                th Trạng thái
                                td
                                    if data.status == "active"
                                        span.badge.bg-success Hoạt động
                                    else
                                        span.badge.bg-danger Dừng hoạt động

                            tr
                                th Nhóm quyền
                                td
                                    if data.role_id
                                        span.badge.badge-info #{data.role_id.title}
                                    else
                                        span.badge.badge-secondary Không xác định
    script(src="/admin/js/script.js") 