extends ../../layouts/default.pug
include ../../mixins/table-tree.pug
include ../../mixins/alert.pug
include ../../mixins/pagination.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug

block main
    +alert-success(5000)
    +alert-error(5000)

    .container-fluid
        // ===== PAGE HEADER =====
        .container-fluid
            .d-flex.justify-content-between.align-items-center.mb-3
                h1.mb-0 Danh mục sản phẩm
                a.btn.btn-success(
                href=`${prefixAdmin}/products-category/create`
                ) + Thêm mới sản phẩm
        .card
    // ===== FILTER & SEARCH =====
    .card.mb-3
        .card-header
            strong Bộ lọc & Tìm kiếm

        .card-body
            .row.align-items-center
            .col-md-6
                +filter-status(filterStatus)

            .col-md-6
                +search(keyword)
    // ===== LIST =====
    .card
        .card-header
            strong Danh sách danh mục sản phẩm

        .card-body.p-0
            table.table.table-hover.table-bordered.table-sm.mb-0
                thead.table-light
                    tr.text-center
                        th(style="width:60px") STT
                        th(style="width:120px") Hình ảnh
                        th Danh mục
                        th(style="width:140px") Vị trí
                        th(style="width:160px") Trạng thái
                        th(style="width:180px") Hành động

                tbody
                    +table-tree(records, 0)

    form(
      action=""
      method="POST"
      id="form-delete-item"
      data-path=`${prefixAdmin}/products-category/delete`
    )
        
 
