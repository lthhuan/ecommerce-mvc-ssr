mixin select-tree(items, level, parent_id)
    - level = Number(level) || 1
    - parent_id = parent_id ? parent_id.toString() : ""

    each item in items
        - const prefix = Array(level + 1).join("-- ")
        option(
            value=item.id
            selected=(item.id.toString() === parent_id)
        ) #{prefix}#{item.title}

        if item.children && item.children.length
            +select-tree(item.children, level + 1, parent_id)